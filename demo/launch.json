{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Dev Web (Next.js)",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "dev:web"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Dev API (Express)",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "dev:api"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Attach to Web (node --inspect)",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Attach to API (node --inspect)",
      "port": 9230,
      "address": "localhost",
      "restart": true,
      "sourceMaps": true,
      "smartStep": true
    }
  ]
}